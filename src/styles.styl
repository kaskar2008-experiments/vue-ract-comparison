.wrap
  display grid
  width 100%
  grid-template-columns 50% 50%
  grid-column-gap 24px
  font-family Avenir, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-align center
  color #2c3e50
  margin-top 60px

  #nav
    a
      display inline-block

      &:not(:first-child)
        margin-left 12px